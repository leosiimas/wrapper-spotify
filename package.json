{
  "name": "wrapper-spotify",
  "version": "1.0.0",
  "description": "A wrapper to work with the Spotify Web API",
  "main": "./src/index.js",
  "scripts": {
    "build": "npm run clear && babel --out-dir lib src",
    "build:watch": "npm run build -- --watch",
    "build:umd": "webpack --output-filename spotify-wrapper.umd.js",
    "build:umd:min": "webpack --output-filename spotify-wrapper.umd.min.js -p",
    "build:all": "npm run build && npm run build:umd && npm run build:umd:min",
    "clear": " rimraf lib",
    "lint": "./node_modules/.bin/eslint src/*.js",
    "test": "./node_modules/.bin/mocha tests/**/*.spec.js --require babel-register",
    "test:tdd": "./node_modules/.bin/mocha tests/**/*.spec.js --require babel-register --watch",
    "test:coverage": "nyc npm test"
  },
  "repository": {
    "type": "git",
    "url": "(https://github.com/leosiimas/wrapper-spotify)"
  },
  "keywords": [
    "js",
    "tdd",
    "library"
  ],
  "nyc": {
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "tests/**"
    ]
  },
  "author": "Leonardo Abreu <leonardo.abreu@inf.ufrgs.br>",
  "license": "ISC",
  "devDependencies": {
    "babel-loader": "^7.0.0",
    "babel-preset-env": "^1.3.2",
    "babel-register": "^6.24.0",
    "chai": "^3.5.0",
    "eslint": "^3.7.1",
    "eslint-config-airbnb": "^12.0.0",
    "eslint-plugin-import": "^2.0.1",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.4.1",
    "husky": "^0.11.9",
    "mocha": "^3.2.0",
    "node-fetch": "^1.6.3",
    "nyc": "^10.2.0",
    "rimraf": "^2.6.3",
    "sinon": "^2.1.0",
    "sinon-chai": "^2.9.0",
    "sinon-stub-promise": "^4.0.0",
    "webpack": "^2.4.1"
  },
  "dependencies": {
    "babel-cli": "^6.24.1",
    "lint": "^1.1.2"
  }
}
